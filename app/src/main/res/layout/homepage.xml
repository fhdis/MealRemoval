<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id= "@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A4E5F2"
        android:layout_gravity="center">
        <!--<Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="left"
            android:background="@mipmap/ic_menu_information"
            android:id="@+id/bt_person_setting"
            />-->
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/tx_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="日期选择"
            android:gravity="center"
            >
        </TextView>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="总户数：300户"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao_shape"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="已完成：300户"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao_shape"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="未完成：300户"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao_shape"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <ListView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:divider="#FFFFFF"
        android:dividerHeight="15dp"
        android:id="@+id/list_xiaoqu">
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_erweima"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao_shape"
            android:text="扫一扫"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>